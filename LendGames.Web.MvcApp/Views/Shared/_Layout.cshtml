<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Empréstimo de Games</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Session["ConnectedId"] == null)
    {
        @NavbarHelper.Build();
    }
    else
    {
        @NavbarHelper.Build(this, Url.RouteUrl("Default"));
    }

    <div class="container body-content">
        <br />
        @if (ViewBag.Title != null)
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2 class="text-center">@ViewBag.Title</h2>
                </div>
            </div>
        }

        @if (ViewData.ModelState.Values.Any(x => x.Errors.Count >= 1))
        {
            @Html.ValidationSummary(false, "Não foi possível prosseguir, verifique os erros e tente novamente.", new { @class = "alert alert-block alert-danger fade in" })
        }

        <div class="row">
            <div class="col-lg-12">
                <div id="response" class="hidden alert"></div>
            </div>
        </div>

        @RenderBody()        

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Diego Vieira da Silva</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
